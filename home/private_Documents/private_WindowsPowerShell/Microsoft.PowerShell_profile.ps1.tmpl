{{- if eq .chezmoi.os "windows" -}}
# Windows PowerShell 5.1 Profile Loader
# Location: ~/Documents/WindowsPowerShell/Microsoft.PowerShell_profile.ps1
# This file loads the PowerShell 7 profile for consistency
# Managed by chezmoi

# Load the same profile as PowerShell 7 for consistency
# Use GetFolderPath to handle OneDrive/redirected Documents folder
$documentsPath = [Environment]::GetFolderPath('MyDocuments')
$pwshProfile = Join-Path $documentsPath "PowerShell\Microsoft.PowerShell_profile.ps1"
if (Test-Path $pwshProfile) {
    . $pwshProfile
}
{{- end -}}
