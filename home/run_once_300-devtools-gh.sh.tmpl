#!/usr/bin/env bash
# Install GitHub CLI (gh) via official apt repository on Ubuntu/WSL
set -euo pipefail

# In Docker, install gh to verify installer works during dev/testing

if command -v gh >/dev/null 2>&1; then
  echo "✓ gh already installed: $(gh --version | head -1)"
  exit 0
fi

# Require apt-based systems
if ! command -v apt-get >/dev/null 2>&1; then
  echo "Error: apt-get not found. Please install gh manually: https://cli.github.com/" >&2
  exit 1
fi

echo "==> Installing GitHub CLI (gh)"
sudo DEBIAN_FRONTEND=noninteractive apt-get update -y
sudo DEBIAN_FRONTEND=noninteractive apt-get install -y curl gnupg

sudo mkdir -p -m 0755 /etc/apt/keyrings
curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo dd of=/etc/apt/keyrings/githubcli-archive-keyring.gpg
sudo chmod go+r /etc/apt/keyrings/githubcli-archive-keyring.gpg

echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | sudo tee /etc/apt/sources.list.d/github-cli.list >/dev/null

sudo DEBIAN_FRONTEND=noninteractive apt-get update -y
sudo DEBIAN_FRONTEND=noninteractive apt-get install -y gh

echo "✓ gh installed: $(gh --version | head -1)"
