# Alacritty configuration example
# This is a reference template - copy to your actual config location and customize as needed.
# 
# NOTE: This is for Windows host system. WSL users should install Alacritty on Windows, not inside WSL.
# Configuration file locations:
#   Windows: %APPDATA%\alacritty\alacritty.toml
#   Linux/macOS: ~/.config/alacritty/alacritty.toml
#
# Setup instructions:
#   1. Copy this file to your platform's config location (see above)
#   2. Update the theme import path for your platform (see import section below)
#   3. Machine-specific settings (especially [terminal.shell]) should be added to
#      alacritty.local.toml (managed by chezmoi via create_alacritty.local.toml.tmpl)

[general]
live_config_reload = true
working_directory = "None"
import = [
    # Theme import - update path for your platform:
    # Windows: "%APPDATA%\\alacritty\\themes\\themes\\tokyo_night_storm.toml"
    # Linux/macOS: "~/.config/alacritty/themes/themes/tokyo_night_storm.toml"
    "~/.config/alacritty/themes/themes/tokyo_night_storm.toml",  # Update this line for your platform
    # Machine-specific configuration (automatically imported if exists)
    # Windows: "%APPDATA%\\alacritty\\alacritty.local.toml"
    # Linux/macOS: "~/.config/alacritty/alacritty.local.toml"
    "~/.config/alacritty/alacritty.local.toml"  # Update this line for your platform
]

# Machine-specific configuration (especially [terminal.shell]) should be added to
# alacritty.local.toml (created via create_alacritty.local.toml.tmpl)
# This file is automatically imported above if it exists.
#
# Example for WSL (Windows):
# [terminal.shell]
# program = "C:\\Windows\\System32\\wsl.exe"
# args = ["-d", "dev", "--cd", "~", "bash", "-ic", "'zellij attach --create main'"]
#
# Example for Linux:
# [terminal.shell]
# program = "/usr/bin/bash"
# args = ["-l"]

[window]
dimensions = { columns = 120, lines = 30 }
padding = { x = 4, y = 2 }
dynamic_padding = true
opacity = 0.85
blur = true
dynamic_title = false

[scrolling]
history = 100000
multiplier = 5

[font]
size = 12.0
offset = { x = 0, y = 4 }
normal = { family = "UDEV Gothic 35NFLG", style = "Regular" }
bold = { family = "UDEV Gothic 35NFLG", style = "Bold" }
italic = { family = "UDEV Gothic 35NFLG", style = "Italic" }
bold_italic = { family = "UDEV Gothic 35NFLG", style = "Bold Italic" }

[mouse]
hide_when_typing = true

[selection]
save_to_clipboard = true
semantic_escape_chars = ",â”‚`|:\"' ()[]{}<>"

