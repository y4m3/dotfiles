# btop config (tokyo-night inspired)
# See: https://github.com/aristocratos/btop#configurability

# Tokyo-night-ish theme
color_theme = "tokyo-night"

# Update intervals
update_ms = 2000
proc_update_mult = 2

# UI preferences
theme_background = True
truecolor = True
force_tty = False
rounded_corners = True

# CPU settings
cpu_graph_upper = "total"
cpu_graph_lower = "total"
cpu_single_graph = False
show_cpu_freq = True

# Memory settings
mem_graphs = True
show_swap = True
swap_disk = True

# Network settings
net_auto = True
net_sync = False
net_iface = ""

# Disk settings
show_disks = True
only_physical = True
use_fstab = True

# Process settings
proc_sorting = "cpu lazy"
proc_reversed = False
proc_tree = False
proc_colors = True
proc_gradient = True
proc_per_core = False
proc_mem_bytes = True
