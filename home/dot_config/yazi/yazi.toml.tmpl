# Yazi general configuration
# Minimal configuration - uses defaults for most settings
# See: https://yazi-rs.github.io/docs/configuration/yazi

[opener]
# Use $EDITOR for text files
edit = [
    { run = '${EDITOR:-vim} "$@"', block = true },
]

# Open directories with current yazi instance
folder = [
    { run = 'cd "$@"', desc = "Change directory" },
]

[open]
rules = [
    { mime = "text/*", use = "edit" },
    { mime = "inode/directory", use = "folder" },
]
