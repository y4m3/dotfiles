# Yazi keymap (vim-style + practical shortcuts)
# See: https://yazi-rs.github.io/docs/configuration/keymap

[manager]
# Vim navigation
prepend_keymap = [
    # Basic movement (vim-style)
    { on = [ "h" ], run = "leave", desc = "Go back to parent directory" },
    { on = [ "l" ], run = "enter", desc = "Enter directory" },
    { on = [ "j" ], run = "arrow 1", desc = "Move down" },
    { on = [ "k" ], run = "arrow -1", desc = "Move up" },
    
    # Fast movement
    { on = [ "g", "g" ], run = "arrow -999999", desc = "Jump to top" },
    { on = [ "G" ], run = "arrow 999999", desc = "Jump to bottom" },
    { on = [ "<C-d>" ], run = "arrow 50%", desc = "Half page down" },
    { on = [ "<C-u>" ], run = "arrow -50%", desc = "Half page up" },
    
    # Selection
    { on = [ "<Space>" ], run = "toggle", desc = "Toggle selection" },
    { on = [ "v" ], run = "visual_mode", desc = "Enter visual mode" },
    { on = [ "V" ], run = "visual_mode --unset", desc = "Exit visual mode" },
    
    # Operations
    { on = [ "y" ], run = "yank", desc = "Copy (yank)" },
    { on = [ "x" ], run = "yank --cut", desc = "Cut" },
    { on = [ "p" ], run = "paste", desc = "Paste" },
    { on = [ "d" ], run = "remove", desc = "Delete (trash)" },
    { on = [ "D" ], run = "remove --permanently", desc = "Delete permanently" },
    
    # File operations
    { on = [ "r" ], run = "rename", desc = "Rename" },
    { on = [ "c" ], run = "create", desc = "Create file/dir" },
    { on = [ "o" ], run = "open", desc = "Open file" },
    { on = [ "O" ], run = "open --interactive", desc = "Open with..." },
    
    # Search & filter
    { on = [ "/" ], run = "find", desc = "Find (search)" },
    { on = [ "n" ], run = "find_arrow", desc = "Next match" },
    { on = [ "N" ], run = "find_arrow --previous", desc = "Previous match" },
    { on = [ "f" ], run = "filter", desc = "Filter files" },
    
    # Misc
    { on = [ "z", "h" ], run = "hidden toggle", desc = "Toggle hidden files" },
    { on = [ "s" ], run = "search fd", desc = "Search with fd" },
    { on = [ "." ], run = "toggle hidden", desc = "Toggle dotfiles" },
    { on = [ "q" ], run = "quit", desc = "Quit" },
    { on = [ "<Esc>" ], run = "escape", desc = "Cancel/escape" },
]
